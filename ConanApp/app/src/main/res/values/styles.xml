<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary" tools:ignore="DuplicateDefinition">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor" tools:ignore="DuplicateDefinition,NewApi">@color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="DuplicateDefinition,NewApi">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="navTextInactive">
        <item name="itemTextColor">@color/colorText</item>>
    </style>

    <style name="navTextActive">
        <item name="itemTextColor">@color/colorTextSelected</item>>
    </style>

</resources>
